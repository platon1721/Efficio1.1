@model App.Domain.Post

@{
    ViewData["Title"] = "Create Post";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h5>Validation Errors:</h5>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label">Tags</label>
                <select name="selectedTags" class="form-control" asp-items="ViewBag.Tags" multiple="multiple">
                </select>
                <small class="form-text text-muted">Hold Ctrl (Cmd on Mac) to select multiple tags</small>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label">Target Departments</label>
                <select name="selectedDepartments" class="form-control" asp-items="ViewBag.Departments" multiple="multiple">
                </select>
                <small class="form-text text-muted">Hold Ctrl (Cmd on Mac) to select multiple departments</small>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
