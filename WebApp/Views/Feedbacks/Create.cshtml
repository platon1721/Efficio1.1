@model App.BLL.DTO.Feedback

@{
    ViewData["Title"] = "Create Feedback";
}

<h1>Create Feedback</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">New Feedback</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter feedback title..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="6"
                                  placeholder="Describe your feedback in detail..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <div class="form-text">Provide detailed information about your feedback.</div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DepartmentId" class="control-label">Target Department</label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="@(ViewData["DepartmentId"] as SelectList)">
                            <option value="">-- Select Department (Optional) --</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        <div class="form-text">Choose which department this feedback is for.</div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Feedback
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb"></i> Tips for Good Feedback
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Be specific and constructive
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Provide examples when possible
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Focus on behaviors, not personalities
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i> Suggest improvements or solutions
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}