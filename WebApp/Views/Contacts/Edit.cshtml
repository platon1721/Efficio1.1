@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.ViewModels.ContactCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Contact.Id" />

            <div class="form-group">
                <label asp-for="Contact.Value" class="control-label"></label>
                <input asp-for="Contact.Value" class="form-control" />
                <span asp-validation-for="Contact.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.ContactTypeId" class="control-label"></label>
                <select asp-for="Contact.ContactTypeId" class="form-control" asp-items="Model.ContactTypeSelectList"></select>
                <span asp-validation-for="Contact.ContactTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.PersonId" class="control-label"></label>
                <select asp-for="Contact.PersonId" class="form-control" asp-items="Model.PersonSelectList"></select>
                <span asp-validation-for="Contact.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
